<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.abhishek.dynamicelementfragmentviewpager.Activities.ContestDetail"
    tools:showIn="@layout/activity_contest_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:id="@+id/contestTitle"
        android:textColor="@color/black"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:lineSpacingExtra="1dp"
        android:textSize="14sp"
        android:id="@+id/contestDesc"
        android:text="Get Highest Cashback on Mobile Recharge Cashback on Mobile Recharge \nGet Highest Cashback on Mobile Recharge Cashback on Mobile Recharge"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:paddingRight="8dp"
        android:paddingEnd="8dp"/>
    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="170dp"
        android:id="@+id/banner"

        android:layout_marginTop="8dp"
      />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/storeButton"
        android:layout_margin="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"
        android:background="@color/buttonColor"
        android:text="Go to FlipKart Store"
        />


    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableContent"
        />




</LinearLayout>
    </ScrollView>
