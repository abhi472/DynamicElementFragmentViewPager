<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_shadow_1"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Activities.FirstPage">


    <!-- This include tag has layout for toolbar , select context TextView and the view pager -->
    <include
        layout="@layout/content_first_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14" />

    <!-- This Linear layout is inflated with circular indicator images programmatically -->
    <LinearLayout
        android:id="@+id/viewPagerCountDots"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|center_vertical"
        android:orientation="horizontal" />

    <!-- include footerlayout here  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/colorPrimary">

    </LinearLayout>


</LinearLayout>
